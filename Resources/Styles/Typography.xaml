     📌 Nội dung đã xử lý:
     - Bộ style typography toàn hệ thống: TextBlock, Label, tiêu đề, phụ đề
     - Định nghĩa global input styles: TextBox / PasswordBox / ComboBox
     - Keyed styles quan trọng: ConfigInputStyle, ConfigPasswordStyle, ShortInputStyle
     - Áp dụng làm nền tảng giao diện cho toàn bộ Views 3XSyncHub
   ============================================================================ -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Brushes -->
    <SolidColorBrush x:Key="TextBrush" Color="#222222"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#444444"/>
    <SolidColorBrush x:Key="TitleBrush" Color="#2E3A59"/>
    <SolidColorBrush x:Key="BorderBrushDefault" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>

    <!-- TextBlock default -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="Label" BasedOn="{StaticResource {x:Type TextBlock}}"/>

    <Style x:Key="TitleText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
    </Style>

    <Style x:Key="SubTitleText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <!-- ========================= -->
    <!-- Global TextBox / PasswordBox -->
    <!-- ========================= -->

    <!-- Global default TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#111111"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Padding" Value="3,0,3,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Global default PasswordBox -->
    <Style TargetType="PasswordBox">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#111111"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Padding" Value="3,0,3,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#111111"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Padding" Value="3,0,3,0"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

    <!-- ShortInputStyle -->
    <Style x:Key="ShortInputStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="55"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="ToolTip" Value="Nhập giá trị ngắn (phút, giây, ...)"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

    <!-- ========================= -->
    <!-- KEYED STYLES for forms -->
    <!-- ========================= -->

    <Style x:Key="ConfigInputStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="310"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style x:Key="ConfigPasswordStyle" TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}">
        <Setter Property="Width" Value="310"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- Log text -->
    <Style x:Key="LogTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#222222"/>
        <Setter Property="Background" Value="#F9F9F9"/>
        <Setter Property="Padding" Value="10,4"/>
    </Style>

    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
    </Style>

</ResourceDictionary>
