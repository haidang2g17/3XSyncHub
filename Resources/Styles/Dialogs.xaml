<!-- ============================================================================
     🗂️ Module: 3XSyncHub.UI.DialogStyles.xaml
     🔖 Version: 20251119_1031
     📌 Nội dung đã xử lý:
     - Bộ giao diện dialog chuẩn 3XVN.UI.v7.6.x (Info, Error, Confirm, Success, Danger)
     - Kế thừa BaseDialogPanel và Button Style từ Buttons.xaml
     - Layout thống nhất: tiêu đề, nội dung, nhóm nút
     - Dùng cho toàn bộ Dialog của 3XSyncHub (Classic Dialog)
   ============================================================================ -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================================ -->
    <!-- 🎨 DIALOG STYLE – CLASSIC 3XVN (v7.6.2) -->
    <!-- ================================================================ -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Buttons.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ⚙️ BASE PANEL -->
    <Style x:Key="BaseDialogPanel" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#DDD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <!-- ================================================================ -->
    <!-- 🪶 THÔNG BÁO -->
    <!-- ================================================================ -->
    <ControlTemplate x:Key="InfoDialogTemplate" TargetType="ContentControl">
        <Border Style="{StaticResource BaseDialogPanel}">
            <StackPanel>
                <TextBlock Text="Thông Báo"
                           FontFamily="Segoe UI"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="#C0392B"
                           Margin="0,0,0,8"
                           TextAlignment="Left"/>

                <TextBlock Text="{TemplateBinding Content}"
                           FontFamily="Segoe UI"
                           FontSize="14"
                           Foreground="#222"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Đóng"
                            Width="100"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ControlTemplate>

    <!-- ================================================================ -->
    <!-- ❌ LỖI -->
    <!-- ================================================================ -->
    <ControlTemplate x:Key="ErrorDialogTemplate" TargetType="ContentControl">
        <Border Style="{StaticResource BaseDialogPanel}">
            <StackPanel>
                <TextBlock Text="Lỗi cấu hình"
                           FontFamily="Segoe UI"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="#B71C1C"
                           Margin="0,0,0,8"
                           TextAlignment="Left"/>

                <TextBlock Text="{TemplateBinding Content}"
                           FontFamily="Segoe UI"
                           FontSize="14"
                           Foreground="#222"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Đóng"
                            Width="100"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ControlTemplate>

    <!-- ================================================================ -->
    <!-- ⚠️ XÁC NHẬN -->
    <!-- ================================================================ -->
    <ControlTemplate x:Key="ConfirmDialogTemplate" TargetType="ContentControl">
        <Border Style="{StaticResource BaseDialogPanel}">
            <StackPanel>
                <TextBlock Text="Xác nhận"
                           FontFamily="Segoe UI"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="#2E3A59"
                           Margin="0,0,0,8"
                           TextAlignment="Left"/>

                <TextBlock Text="{TemplateBinding Content}"
                           FontFamily="Segoe UI"
                           FontSize="14"
                           Foreground="#222"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,5,0,0">
                    <Button Content="Có"
                            Width="100"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,10,0"/>
                    <Button Content="Không"
                            Width="100"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ControlTemplate>

    <!-- ================================================================ -->
    <!-- ✅ THÀNH CÔNG -->
    <!-- ================================================================ -->
    <ControlTemplate x:Key="SuccessDialogTemplate" TargetType="ContentControl">
        <Border Style="{StaticResource BaseDialogPanel}">
            <StackPanel>
                <TextBlock Text="Thành công"
                           FontFamily="Segoe UI"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="#2E7D32"
                           Margin="0,0,0,8"
                           TextAlignment="Left"/>

                <TextBlock Text="{TemplateBinding Content}"
                           FontFamily="Segoe UI"
                           FontSize="14"
                           Foreground="#222"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Đóng"
                            Width="100"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ControlTemplate>

    <!-- ================================================================ -->
    <!-- 🧨 CẢNH BÁO / XÓA -->
    <!-- ================================================================ -->
    <ControlTemplate x:Key="DangerDialogTemplate" TargetType="ContentControl">
        <Border Style="{StaticResource BaseDialogPanel}">
            <StackPanel>
                <TextBlock Text="Cảnh báo"
                           FontFamily="Segoe UI"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="#C0392B"
                           Margin="0,0,0,8"
                           TextAlignment="Left"/>

                <TextBlock Text="{TemplateBinding Content}"
                           FontFamily="Segoe UI"
                           FontSize="14"
                           Foreground="#222"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Xóa"
                            Width="100"
                            Style="{StaticResource DangerButtonStyle}"
                            Margin="0,0,10,0"/>
                    <Button Content="Hủy"
                            Width="100"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ControlTemplate>

</ResourceDictionary>
